<div class="container">
  <h2><%= @recipe.name %></h2>
  <div class="row">
    <div class="col-md-2" >
      <%= link_to gravatar_for(@recipe.chef, size: 100), chef_path(@recipe.chef) %>
      <p>Recipe by: Chef <%= @recipe.chef.chefname %></p>
      <p>"<%= @recipe.summary %>"</p>
    </div>
    <div class="col-md-8">
      <% if logged_in? && (current_user == @recipe.chef) %>
        <%= link_to "Edit This Recipe", edit_recipe_path(@recipe), class: "btn btn-primary" %>
      <% end %>
      <br><br>
      <div class="recipe-directions">
        <p>
          <strong>Directions:</strong>
        </p>
        <%= simple_format(@recipe.description) %>
        
        <div class="pull-right">
          <%= link_to like_recipe_path(@recipe, like: true), method: :post do %>
            <i class="fa fa-thumbs-o-up"></i> <%= @recipe.thumbs_up_total %>
          <% end %>
          &nbsp;&nbsp;
          <%= link_to like_recipe_path(@recipe, like: false), method: :post do %>
            <i class="fa fa-thumbs-o-down"></i> <%= @recipe.thumbs_down_total %>
          <% end %>
        </div>
        <br>
      </div>
    </div>
  </div>
</div>