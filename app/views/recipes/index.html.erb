<div class="container">
  
  <div align="center"><%= will_paginate %></div>
  
  <div class="col-md-8 col-md-offset-2 stream">
    <% @recipes.each do |recipe| %>
    <section class="recipe-item">
      <div class="row">
        
        <div class="col-md-1">
          <%= gravatar_for(recipe.chef, size: 50) %>
        </div>
        
        <div class="col-md-11">
          <%= link_to "<i class=\"fa fa-trash-o\"></i>".html_safe, recipe_path(recipe), method: :delete, 
                                                        data: {confirm: "Are you sure you want to delete the recipe?"}, 
                                                        class: "btn btn-sm btn-danger pull-right" %>
          <h4><small>@<%= recipe.chef.chefname %></small></h4>
          <h3><%= link_to recipe.name, recipe_path(recipe) %></h3>
          <h3><small><%= recipe.summary %></small></h3>
          <small><%= time_ago_in_words(recipe.created_at) %> ago</small>
          
          <div class="pull-right">
            <%= link_to like_recipe_path(recipe, like: true), method: :post do %>
              <i class="fa fa-thumbs-o-up"></i> <%= recipe.thumbs_up_total %>
            <% end %>
            &nbsp;&nbsp;
            <%= link_to like_recipe_path(recipe, like: false), method: :post do %>
              <i class="fa fa-thumbs-o-down"></i> <%= recipe.thumbs_down_total %>
            <% end %>
          </div>
          <br>
        </div>
        
      </div>
    </section>
    <% end %>
  </div>
  
  <div align="center"><%= will_paginate %></div>
</div>